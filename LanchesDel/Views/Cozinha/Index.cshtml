@model IEnumerable<Domain.Cozinha>

@{
    ViewData["Title"] = "Index";
}

<h2>Gerenciamento das Cozinhas</h2>

<p>
    <a asp-action="Create" class="btn btn-info">Cadastrar Cozinha</a>
</p>
<table class="table table-hover table-striped"
       style="margin-top:15px;margin-bottom:15px">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                Descricao
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avaliacao)
            </th>
            <th>
                Data de Cadastro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avaliacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CriadoEm)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Nome" class="btn btn-primary">Alterar</a>
                    <a asp-action="Delete" asp-route-id="@item.Nome" class="btn btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
